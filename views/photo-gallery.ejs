<!DOCTYPE html>
<html lang="en">

<%- include("templates/head", {title: "Photo Gallery"}); %>

<body>

    <%- include("templates/navbar") -%>

    <section>
        <h1 class="text-center">The Photo Gallery</h1>
        <div class="photo-gallery-wrapper"></div>
    </section>

    <%- include("templates/copyright", {
        liSrc: "images/logos/linkedin.png", 
        ghSrc: "images/logos/github.png"
    }); %>

</body>

<script>
    let photos = '<%- allImages %>';
    photos = photos.split(",");
    const photoGalleryWrapper = document.querySelector(".photo-gallery-wrapper");
    for (const photo of photos) {
        photoGalleryWrapper.innerHTML += `<div>
            <a href="/image-viewer/photography/${photo}">
                <img src="images/photography/thumbnails/${photo}" height="220" width="320">
            </a>
        </div>`
    }
</script>

</html>